<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    package="del.app.dnote" >
    
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
       	android:name=".Applications"
        android:resizeableActivity="false">

        <activity
            android:name="del.app.dnote.activity.SplashScreen"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity
            android:name="del.app.dnote.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name="del.app.dnote.activity.DebugActivity"
            android:screenOrientation="portrait"/>
		
		<activity
            android:name="del.app.dnote.activity.AddActivity"
            android:screenOrientation="portrait"/>
      <meta-data
          android:name="android.max_aspect"
          android:value="4.0"/>

    </application>
	
</manifest>
